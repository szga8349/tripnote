    background: #fff;
    line-height: 32px;
    color: #999;
    font-size: 12px;
  }

  .menu{
    display: flex;
    margin: 20rpx 20rpx 0;
    background: #fff;
    box-shadow: 0 0 16rpx rgba(0,0,0,.08);
    .item{
      width: 25%;
      padding: 30rpx 0;
      text-align: center;
      &.active{
        background: #f8f8f8;
      }
    }
    image{
      display: block;
      width: 71rpx;
      height: 71rpx;
      margin: 0 auto 5px;
    }
  }

  .productList{
    margin: 0 10px 20rpx;
    .item{
      display: flex;
      margin-top: 10px;
      .pic{
